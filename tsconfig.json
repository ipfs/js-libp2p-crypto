{
  "extends": "./node_modules/aegir/src/config/tsconfig.aegir.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "lib": [
      "es6",
      "DOM"
    ],
    "resolveJsonModule": true,
    "target": "ES5",
    "baseUrl": ".",
    "paths": {
      "libp2p-crypto": [
        "./src",
        "../../src",
        "../src"
      ]
    }
  },
  "exclude": [
    "./src/keys/keys.js"
  ],
  "include": [
    "test",
    "src",
    "test/fixtures/*.json"
  ]
}
